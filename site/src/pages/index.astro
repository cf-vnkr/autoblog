---
import Layout from '../layouts/Layout.astro';
import PostCard from '../components/PostCard.astro';
import { getAllPosts } from '../lib/posts';

const posts = await getAllPosts();
---

<Layout title="Cloudflare Blog Summaries - AI-Powered Insights">
  <div class="container mx-auto px-4 py-12">
    <!-- Hero Section -->
    <div class="text-center mb-12">
      <h1 class="text-4xl md:text-5xl font-bold text-gray-900 mb-4">Cloudflare Blog Summaries</h1>
      <p class="text-lg text-gray-600 max-w-2xl mx-auto">
        Get AI-powered summaries of the latest Cloudflare blog posts. Stay updated on new features,
        announcements, and technical insights without reading full articles.
      </p>
    </div>

    <!-- Posts Grid -->
    {
      posts.length > 0 ? (
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
          {posts.map((post) => (
            <PostCard post={post} />
          ))}
        </div>
      ) : (
        <div class="text-center py-12">
          <p class="text-gray-500 text-lg">No posts available yet. Check back soon!</p>
        </div>
      )
    }
  </div>
</Layout>
