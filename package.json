{
  "name": "autoblog",
  "version": "1.0.0",
  "private": true,
  "description": "Automated blog scraper for Cloudflare blog with AI summaries",
  "workspaces": [
    "worker",
    "site"
  ],
  "scripts": {
    "dev:worker": "npm run dev --workspace=worker",
    "dev:site": "npm run dev --workspace=site",
    "build": "npm run build --workspaces",
    "build:worker": "npm run build --workspace=worker",
    "build:site": "npm run build --workspace=site",
    "deploy:worker": "npm run deploy --workspace=worker",
    "lint": "npm run lint --workspaces --if-present",
    "lint:fix": "npm run lint:fix --workspaces --if-present",
    "format": "prettier --write \"**/*.{ts,tsx,astro,json,md}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,astro,json,md}\"",
    "type-check": "npm run type-check --workspaces --if-present"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "eslint": "^8.56.0",
    "prettier": "^3.2.4",
    "prettier-plugin-astro": "^0.13.0",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
